<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="matti.eshop.model" default-access="field">
  <class name="Location" table="locations">
    <id name="locationId" column="location_id">
      <generator class="sequence">
        <param name="sequence">location_sequence</param>
      </generator>
    </id>
    <property name="district" column="district" not-null="true" length="50"/>
    <set name="items" inverse="true">
      <key column="location_id"/>
      <one-to-many class="Item"/>
    </set>
  </class>
</hibernate-mapping>
